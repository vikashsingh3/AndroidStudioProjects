<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_human"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="button_click"
        android:text="Human"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_vehicle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="button_click"
        android:text="Vehicle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_human"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_nature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="button_click"
        android:text="Nature"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_extra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_human" />

    <Button
        android:id="@+id/button_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="button_click"
        android:text="Extras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_nature"
        app:layout_constraintTop_toBottomOf="@+id/button_vehicle" />

</androidx.constraintlayout.widget.ConstraintLayout>