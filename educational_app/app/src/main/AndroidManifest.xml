<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.educational_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/quiz_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".game_activity.GameOverActivity" />
        <activity android:name=".game_activity.GameActivity" />
        <activity android:name=".game_activity.LeaderboardActivity" />
        <activity
            android:name=".game_activity.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".game_activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>