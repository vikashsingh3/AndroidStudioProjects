<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".game_activity.GameActivity">

    <fragment
        android:id="@+id/fragment_status"
        android:name="com.example.educational_app.game_fragment.StatusFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/fragment_image"
        android:name="com.example.educational_app.game_fragment.ImageFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <fragment
        android:id="@+id/fragment_question"
        android:name="com.example.educational_app.game_fragment.QuestionFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
</androidx.appcompat.widget.LinearLayoutCompat>